package HW1.edu.fitchburgstate.csc7400;
/*this class contain the test cases to test the methods present in the inventory class*/
import static org.junit.jupiter.api.Assertions.*;

import java.util.LinkedList;
import java.util.List;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

class InventoryTestAss2 

{
	

	@Test
	public void addTest()//Test the adding guitar
	{
		//first we declare GuitarSpec and we add it to inventory
		GuitarSpec g = new GuitarSpec(Manufacturer.Fender, "Stratocaster", Type.Electric,
				Wood.Alder, Wood.Alder);
		Inventory i=new Inventory();
		i.addGuitar("V95693", 1499.95,g);
		
		Guitar g1=i.getGuitar("V95693");
		assertEquals(1499.95,g1.getPrice());//checking the price of so guitar is sucessfully added
		
	}
	@Test
	public void getGuitar()//test get guitar
	{
		GuitarSpec g = new GuitarSpec(Manufacturer.Fender, "Stratocaster", Type.Electric,
				Wood.Alder, Wood.Alder);
		Inventory i=new Inventory();
		i.addGuitar("V95693", 1499.95,g);
		GuitarSpec g1 = new GuitarSpec(Manufacturer.Olson, "SJ", Type.Acoustic,
				Wood.IndianRosewood, Wood.Cedar);
		i.addGuitar("1092",12995.95,g1);
		
		Guitar g2=i.getGuitar("1092");
		Guitar g3=i.getGuitar("V95693");
		assertEquals("V95693",g3.getSerialNumber());
		assertEquals("1092",g2.getSerialNumber());//getting right guitar
		
		
	}
	@Test
	public void searchGuitar()//test search guitar for diff condition
	{
		Inventory i=new Inventory();
		GuitarSpec g = new GuitarSpec(Manufacturer.Gibson, "Les Paul", Type.Electric,
					Wood.Mahogany, Wood.Maple);
		
		i.addGuitar("70108276", 2295.95,g);
		
		
		List<Guitar> lis=i.search(g);
	
		assertEquals(1,lis.size());//we compared and serched and should get size as 2
	    
		
	}
	@Test
	public void searchGuitar1()//Gibson
	{
		
		Inventory i=new Inventory();
		GuitarSpec g = new GuitarSpec(Manufacturer.Gibson, "Les Paul", Type.Electric,
					Wood.Mahogany, Wood.Maple);
		
		i.addGuitar("70108276", 2295.95,g);
		GuitarSpec g1 = new GuitarSpec(Manufacturer.Gibson, "SG '61 Reissue", Type.Electric,
					Wood.Mahogany, Wood.Mahogany);
		i.addGuitar("82765501", 1890.95,g1);
		
		GuitarSpec g3=new GuitarSpec(Manufacturer.Gibson,null,null,null,null);
		
		List<Guitar> li= i.search(g3);
		assertEquals(2,li.size());
	}
	@Test
	public void searchGuitar2()//Fender
	{
		
		Inventory i=new Inventory();
		GuitarSpec g = new GuitarSpec(Manufacturer.Fender, "Les Paul", Type.Electric,
					Wood.Mahogany, Wood.Maple);
		
		i.addGuitar("70108276", 2295.95,g);
		GuitarSpec g1 = new GuitarSpec(Manufacturer.Fender, "SG '61 Reissue", Type.Electric,
					Wood.Mahogany, Wood.Mahogany);
		i.addGuitar("82765501", 1890.95,g1);
		
		GuitarSpec g3=new GuitarSpec(Manufacturer.Fender,null,null,null,null);
		
		List<Guitar> li= i.search(g3);
		assertEquals(2,li.size());
	}
	@Test
	public void searchGuitar3()//Type
	{
		
		Inventory i=new Inventory();
		GuitarSpec g = new GuitarSpec(Manufacturer.Gibson, "Les Paul", Type.Electric,
					Wood.Mahogany, Wood.Maple);
		
		i.addGuitar("70108276", 2295.95,g);
		GuitarSpec g1 = new GuitarSpec(Manufacturer.Gibson, "SG '61 Reissue", Type.Electric,
					Wood.Mahogany, Wood.Mahogany);
		i.addGuitar("82765501", 1890.95,g1);
		
		GuitarSpec g3=new GuitarSpec(null,null,Type.Electric,null,null);
		
		List<Guitar> li= i.search(g3);
		assertEquals(2,li.size());
	}
	public void searchGuitar4()//given manufacturer type and wood
	{
		
		Inventory i=new Inventory();
		GuitarSpec g = new GuitarSpec(Manufacturer.Gibson, "Stratocaster", Type.Electric,
					Wood.Alder, Wood.Alder);
		
		i.addGuitar("70108276", 2295.95,g);
	
		
		GuitarSpec g3=new GuitarSpec(Manufacturer.Fender,"Stratocaster",Type.Electric,Wood.Alder,Wood.Alder);
		
		List<Guitar> li= i.search(g3);
		assertEquals(1,li.size());
	}
	
	
	
}
